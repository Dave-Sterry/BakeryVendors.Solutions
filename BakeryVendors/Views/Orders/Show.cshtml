@{
  Layout = "_Layout";
}

<h1>Order List Details</h1>

<h2>Vendor: @Model["vendor"].Name</h2>
<h3>@Model["order"].Title</h3>
<h3>@Model["order"].Description</h3>
<h3>@Model["order"].Price</h3>
<h3>@Model["order"].Date</h3>

<form action="/orders/delete" method = "post">
  <button type="submit" name="button">Clear this order</button>
</form>
<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order for this vendor</a>

<a href='/vendors'>Back to Vendors List</a>
<a href='/'>Back to Home</a>